@model LoginDemoApp.Entity.Models.EmployeeModel
@{
    ViewData["Title"] = "EmployeeUpdate";
}

<div class="card shadow-2-strong bg-light p-5 m-8" style="border-radius: 1rem;">
    <div class="text-centre"><h3>Employee Update Form </h3></div>
    <hr />
    <form method="post">
        <div class="row">
            <div class="form-group col-6">
                <label for="EmpId">Emp ID </label>
                <input type="text" class="form-control" asp-for="EmpId" readonly />
            </div>
            <div class="form-group col-6">
                <label for="UserName">User Name</label>
                <input type="text" class="form-control" asp-for="UserName" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label for="Email">Email</label>
                <input type="text" class="form-control" asp-for="Email" />
            </div>
            <div class="form-group col-6">
                <label for="Password">Password</label>
                <input type="text" class="form-control" asp-for="Password" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label for="GivenName">Given Name</label>
                <input type="text" class="form-control" asp-for="GivenName" />
            </div>
            <div class="form-group col-6">
                <label for="Surname">Surname</label>
                <input type="text" class="form-control" asp-for="Surname" />
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                <label for="Role">Role</label>
                <input type="text" class="form-control" asp-for="Role" />
            </div>
            <div class="col-6 mt-4">
                <input type="submit" value="Update Details" class="btn btn-primary" />
            </div>
        </div>
        <hr />
        <button class="btn-outline-secondary"><a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="ShowAllEmpDetails">Back To Table</a></button>
        <hr />
        @if (ViewBag.status == "OK")
        {
            <div class="alert alert-success">
                @ViewBag.message
            </div>
        }
        else if (ViewBag.status == "Error")
        {
            <div class="alert alert-danger">
                @ViewBag.message
            </div>
        }
    </form>
</div>
