@model LoginDemoApp.Entity.Models.EmployeeModel;
@{
    ViewData["Title"] = "EmployeeLogin";
}

<h1>Employee Login</h1>

<hr />

<form method="post" class="border p-3 m-3 bg-light">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="text" class="form-control" asp-for="Password" />
    </div>
    <input type="submit" value="Login" class="btn btn-primary" />
    <hr />
    @if (ViewBag.status == "OK")
    {
    <div class="alert alert-success">
        @ViewBag.message
    </div>
    }
    else if (ViewBag.status == "Error")
    {
    <div class="alert alert-danger">
        @ViewBag.message
    </div>
    }
</form>